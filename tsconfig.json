{
    "compilerOptions": {
        "target": "es6",
        "lib":["es2016"],
        "rootDir":"serverTs",
        "outDir": "server",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "types":["node"]
    },
    "include": [
        "serverTs/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "files": [
        "typing/pixl-xml/pixl-xml.d.ts"
    ]
}